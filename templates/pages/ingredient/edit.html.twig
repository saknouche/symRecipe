{% extends 'base.html.twig' %}
{% block title %}
  SymRecipe - Editer un ingrédient
{% endblock %}
{% block body %}
  <div class="container">
    <h1 class="mt-4">Modifier un ingrédient</h1>
    {{ form_start(form) }}
    <div class="form-group">
      {{ form_label(form.name) }}
      {{ form_widget(form.name) }}
      <div class="text-danger">{{ form_errors(form.name) }}</div>
    </div>
    <div class="form-group">
      {{ form_label(form.price) }}
      {{ form_widget(form.price) }}
      <div class="text-danger">{{ form_errors(form.price) }}</div>
    </div>
    <div class="form-group"><button type="submit" class="btn btn-primary mt-3">Editer l'ingrédient</button></div>
    {{ form_end(form) }}
  </div>
{% endblock %}